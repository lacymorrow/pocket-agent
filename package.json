{
  "name": "cursor-pocket-agent",
  "displayName": "Pocket Agent",
  "version": "1.0.0",
  "description": "Mobile interface for Cursor's composer",
  "publisher": "cursor-tools",
  "icon": "icon.png",
  "main": "src/cursor-plugin.js",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "_extensionClient.toolCall",
        "title": "Execute Tool Call",
        "category": "Cursor"
      },
      {
        "command": "pocketAgent.readChatText",
        "title": "Pocket Agent: Read Chat Text",
        "category": "Pocket Agent"
      },
      {
        "command": "pocketAgent.signIn",
        "title": "Pocket Agent: Sign In",
        "category": "Pocket Agent"
      },
      {
        "command": "pocketAgent.signOut",
        "title": "Pocket Agent: Sign Out",
        "category": "Pocket Agent"
      }
    ],
    "configuration": {
      "title": "Pocket Agent",
      "properties": {
        "pocketAgent.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "The URL of the Pocket Agent server.",
          "scope": "machine-overridable"
        },
        "pocketAgent.debugPort": {
          "type": "number",
          "default": 9223,
          "description": "The remote debugging port for Cursor.",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package",
    "install-extension": "vsce package -o ./cursor-pocket-agent.vsix && cursor --install-extension ./cursor-pocket-agent.vsix --force && rm ./cursor-pocket-agent.vsix",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run lint",
    "lint": "eslint .",
    "watch": "npm-watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "watch": {},
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.24.0",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "glob": "^10.3.3",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "npm-watch": "^0.11.0",
    "typescript-eslint": "^8.32.1",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37"
  }
}
