{
  "name": "cursor-pocket-agent",
  "displayName": "Pocket Agent",
  "version": "1.0.0",
  "description": "Mobile interface for Cursor's composer",
  "publisher": "cursor-tools",
  "icon": "icon.png",
  "main": "src/cursor-plugin.js",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "_extensionClient.toolCall",
        "title": "Execute Tool Call",
        "category": "Cursor"
      },
      {
        "command": "pocketAgent.readChatText",
        "title": "Pocket Agent: Read Chat Text",
        "category": "Pocket Agent"
      },
      {
        "command": "pocketAgent.setUserId",
        "title": "Pocket Agent: Set User ID",
        "category": "Pocket Agent"
      }
    ],
    "configuration": {
      "title": "Pocket Agent",
      "properties": {
        "pocketAgent.userId": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Your Pocket Agent User ID. This is used to associate your IDE with your Pocket Agent account.",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "package": "vsce package",
    "install-extension": "vsce package -o ./cursor-pocket-agent.vsix && cursor --install-extension ./cursor-pocket-agent.vsix --force && rm ./cursor-pocket-agent.vsix",
    "vercel-build": "echo 'No build steps needed'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "nodemon": "^3.0.2",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37"
  }
}
